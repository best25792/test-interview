meta {
  name: Get Wallet Details
  type: http
  seq: 4
}

get {
  url: {{base_url}}/api/v1/users/{{userId}}/wallet
  body: none
  auth: none
}

vars:pre-request {
  base_url: http://localhost:8080
  userId: 1
}

tests {
  test("Status code is 200", function() {
    expect(res.status).to.equal(200);
  });
  
  test("Response has wallet details", function() {
    expect(res.body.balance).to.exist;
    expect(res.body.currency).to.exist;
  });
}
